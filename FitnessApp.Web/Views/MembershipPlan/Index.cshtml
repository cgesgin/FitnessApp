@{
    ViewData["Title"] = "Fitness Plans Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Plans</h1>

<p class="mb-3 text-muted">
    This page is used to <strong> operations </strong> all defined <strong>membership plans</strong> in the system. You can see the name, price, duration, type, and associated activities for each plan. Use the "New Plan" button to add a new membership plan.
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Membership Plans</h6>
        <a asp-controller="MembershipPlan" asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> New Plan
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Duration</th>
                        <th>Membership Type</th>
                        <th>Activities</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var plan in Model)
                    {
                        <tr>
                            <td>@plan.Name</td>
                            <td>@plan.Price.ToString("C")</td>
                            <td>@($"{plan.DurationValue} {plan.DurationType}")</td>
                            <td>@plan.MembershipType?.Name</td>
                            <td>
                                @if (plan.Activities != null && ((IEnumerable<FitnessApp.Core.Models.Activity>)plan.Activities).Any())
                                {
                                    <ul>
                                        @foreach (var activity in plan.Activities)
                                        {
                                            <li>@activity.Name</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">No activities</span>
                                }
                            </td>
                            <td>
                                <a href="/MembershipPlan/Delete/@plan.Id" class="btn btn-outline-danger">
                                    <i class="fas fa-trash fa-sm fa-fw"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Styles{

    <link href="~/template/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@section Scripts {
    <!-- Page level plugins -->
    <script src="~/template/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/template/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/template/js/demo/datatables-demo.js"></script>

}